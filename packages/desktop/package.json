{
  "name": "@notes-app/desktop",
  "version": "0.1.0",
  "description": "Personal notes management with AI-powered search and analysis",
  "author": "Your Name <your.email@example.com>",
  "private": true,
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "../../node_modules/.bin/electron out/main/index.js",
    "electron": "../../node_modules/.bin/electron out/main/index.js",
    "dist": "pnpm run build && electron-builder",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@notes-app/shared": "workspace:*",
    "@radix-ui/react-accordion": "1.2.2",
    "@radix-ui/react-alert-dialog": "1.1.4",
    "@radix-ui/react-aspect-ratio": "1.1.1",
