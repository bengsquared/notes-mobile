{
  "name": "notes-app",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:web": "cd packages/web && pnpm run dev",
    "dev:desktop": "cd packages/desktop && pnpm run dev",
    "build:shared": "cd packages/shared && pnpm run build",
    "build:web": "cd packages/web && pnpm run build",
    "build:desktop": "cd packages/desktop && pnpm run build",
    "build": "pnpm run build:shared && pnpm run build:web && pnpm run build:desktop",
    "package:desktop": "pnpm run build:desktop && cd packages/desktop && pnpm run dist",
    "package:desktop:all": "pnpm run build:desktop && cd packages/desktop && pnpm run dist:all",
    "postinstall": "echo 'Install complete'"
  },
  "devDependencies": {
    "@types/node": "^22.15.23",
    "electron": "36.3.1",
    "pnpm": "^8.14.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}