{
  "name": "notes-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:web": "pnpm --filter @notes-app/web dev",
    "dev:desktop": "pnpm --filter @notes-app/desktop dev",
    "build:shared": "pnpm --filter @notes-app/shared build",
    "build:web": "pnpm --filter @notes-app/web build",
    "build:desktop": "pnpm --filter @notes-app/desktop build",
    "build": "pnpm run build:shared && pnpm run build:web && pnpm run build:desktop",
    "postinstall": "echo 'Dependencies installed!'"
  },
  "devDependencies": {
    "@types/node": "^22.15.23",
    "pnpm": "^8.14.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}